<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/adapter_layout">

    <RelativeLayout
        android:id="@+id/basicLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I love Anroid!sdsdsdsdsdsdsdsdsdsdssdsdsdsdsdsdsdsdsdsdsdsd"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/right"/>

        <RelativeLayout
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/trashbox"
                android:layout_marginRight="12dp"/>

            <ImageButton
                android:id="@+id/modification"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/pencil"
                android:layout_toRightOf="@+id/delete"/>


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/modificationLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/modiContent"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="I love Anroid!"
            android:textColor="#000000"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/updateButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/modiContent"
            android:background="@drawable/content_update_button_layout"
            android:text="Update"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:layout_marginTop="35dp"/>

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/updateButton"
            android:layout_marginTop="10dp"
            android:background="@drawable/content_update_cancel_button_layout"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:textAllCaps="false"/>


    </RelativeLayout>


</RelativeLayout>